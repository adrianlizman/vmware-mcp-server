
# VMware vCenter/ESXi Configuration
VMWARE_HOST=vcenter.example.com
VMWARE_USERNAME=administrator@vsphere.local
VMWARE_PASSWORD=your_password_here
VMWARE_PORT=443
VMWARE_VERIFY_SSL=false
VMWARE_DATACENTER=Datacenter1

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8080
MCP_SERVER_NAME=vmware-mcp-server
MCP_SERVER_VERSION=1.0.0

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
ENABLE_RBAC=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/vmware-mcp-server.log
ENABLE_AUDIT_LOG=true

# Ollama Integration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=30
ENABLE_OLLAMA=true

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your-n8n-api-key
ENABLE_N8N=true

# Performance and Limits
MAX_CONCURRENT_OPERATIONS=10
OPERATION_TIMEOUT=300
CACHE_TTL=300
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings
DEBUG=false
ENABLE_SWAGGER=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
